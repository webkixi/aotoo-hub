ficonCfg = {
  $display: block
  $icon: false
  $top: calc(50% - 8px)
  $right: 10px
  $font-size: false
  $color: false
  $pseudo: after

  $isrelative: true
}


placeholder($color = $placeholderColor, $font-size = $inputSize)
  &::-webkit-input-placeholder
    color: $color
    font-size: $font-size
  &::-moz-placeholder 
    color: $color
    font-size: $font-size
  &::-moz-placeholder
    color: $color
    font-size: $font-size
  &::-ms-input-placeholder
    color: $color
    font-size: $font-size

//input 带icon 公共部分
ss-form-icon($config = false)
  cfg = merge({}, ficonCfg, $config)
  if (cfg.$isrelative == true)
    +cache()
      position: relative
  ss-icon(cfg.$icon, cfg.$font-size, cfg.$color,  $isFlex: cfg.$display, $pseudo: cfg.$pseudo)
  &:{cfg.$pseudo}
    ss-position(absolute, $top: cfg.$top, $right: cfg.$right)
  
ss-form_control( $height = $inputHeight, $br = $inputBr, $width = 100%)
  background-color: $bgColor
  border: 1px solid $borderColor 
  box-sizing: border-box
  color: $color-text-title
  height: $height
  line-height: @height
  padding: $inputPadding
  outline: none;
  width: $width if ($width != false)
  if ($br != 0)
    border-radius: $inputBr
  &:focus
    border-color: $inputHoverColor
    outline: none;
  &:read-only
    &:focus
      box-shadow: none;
      border-color: none
  &:disabled
    background-color: $disabledColorBg
    border-color: $disabledColor
    color: $borderColor
    cursor: default;
  &.noborder
    border: none
    height: $height - 2
  &.itemError
    border-color: $color-aux-fail

//自定义
ss-custom-form()
  ss-form_control()
  &.i-sm
    width: $inputWidMin
  &.i-lg
    width: $inputWidMax

//checkbox radio
ss-rcInput-theme($type = 'default')    //调用时 需要注意父级给个relative
  input
    cursor: pointer
    position: absolute;
    top: 0;
    left: @top
    width: 100%;
    height: @width
    opacity: @top
    border: @top
    margin: @top
    z-index: 9;
    if ($type == 'default')
      &:checked
        &+[class*='-box']
          color: $rcCheckedColor
        &+[class*='-radio']
          &:before
            content: $radioChecked;
        &+[class*='-checkbox']
          &:before
            content: $checkboxChecked;
      &:disabled
        &+[class*='-box']
          color: $disabledColor
          &:before
            background: $disabledColorBg
            cursor: not-allowed
          &[class*='radio']
            &:before
              border-radius: 100%
    else
      &:checked
        &+[class*='-box']
          border-color: $color-aux-warning 
          color: $color-aux-warning 
          &:before
            color: @color
      &:disabled
        &+[class*='-box']
          color: $disabledColor
          &:before
            background: $disabledColorBg
            cursor: not-allowed
          &[class*='radio']
            &:before
              border-radius: 100%
  if ($type == 'default')
    [class*='-box']
      font-size: $rcSize
      position: relative
      display: block;
      width: @font-size
      height: @font-size
      margin-right: $rcInputMr
      color: $rcColor
    [class*='radio']
      &:before
        content: $radio
    [class*='checkbox']
      &:before
        content: $checkbox
  else
    [class*='-box']
      font-size: $rcSize
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      border: 1px solid $rcColor
      border-radius: 3px
      &:before
        content: $icon-tick
        color: $rcColor
        position: absolute
        bottom: -1px      //因为定位，iconfont 会产偏差
        right: -1px      //因为定位，iconfont 会产偏差

ss-form-checkbox-radio($type = 'default')
  ss-display-flex(row nowrap, flex-start)
  ss-rcInput-theme($type)
  margin-right: $space
  position: relative
  &:only-child
    margin-right: 0

