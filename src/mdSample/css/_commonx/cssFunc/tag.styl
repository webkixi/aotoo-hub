btnConfig = {
  $bgc: $btn-bgc-default
  $pcolor: $btn-bgc-default
}

ss-tagFunc($class = '.tag-default', $config = false)
  cfg = merge({}, btnConfig, $config)
  {$class}
    background-color: cfg.$bgc
    border-color: @background-color
    color: cfg.$color || #fff
    &.plain
      background-color: cfg.$pbgc || #fff
      border-color: @border-color
      color: cfg.$pcolor
