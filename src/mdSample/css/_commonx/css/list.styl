$height = 88rpx
$color = #333
/*
 gird
*/
ssfunc-list-grid-3()
  .list-grid-3
    ss-display-flex(row wrap, flex-start)
    margin-left: -3%
    margin-top: -3%
    >ui-item
      >.item
        width: calc(91% / 3 )
        margin-left: 3%
        margin-top: 3%
        .htitle
          width: calc(100% - 4rpx)

ssfunc-list-check()
  .list-check
    background: #fff
    .item-li
      padding: 0 40rpx
      font-size: 30rpx
      color: $color
      height: 100rpx
      line-height: @height
      ss-textellipsis(1)
      &:before
        content: '\e78f'
        color: #ccc
        font-size: 36rpx
        margin-right: 20rpx
      &.active
        &:before
          content: '\e78d'
          color: $color-primary
    &.checked
      .item-li
        &:before
          display: none
