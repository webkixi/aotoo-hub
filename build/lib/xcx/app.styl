@import "./common/css/index"

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

// tab的默认样式
.tab-container 
  background-color red
  .menu-box 
    display flex
    flex-direction: row
    .menu-item
      flex:1;
      background-color:#00f;
      text-align:center;
      height:40px;
      line-height:36px;
      &.active
        background-color yellow


.input-container
  min-height 400px
.input-item
  display block
  margin-top 50rpx
  .profile-item
    &-title
      font-size 30rpx
      color: #999
      margin-bottom 20rpx
    &-desc
      font-size 30rpx
    &-required
      font-size 30rpx
  .input-item-content
    ss-display-flex(row nowrap, flex-start)
    position relative
    width 100vw
    font-size 30rpx
    padding 14rpx 5rpx
    border-bottom: 1px solid #e5e5e5
    background #fff
    .input-item
      &-dropdown
        font-size 28rpx
      &-dropdown-options
        font-size 28rpx
        width calc(100% - 80rpx)
        min-height 100px
        max-height 100px
        background-color #ffffff
        border 1px solid #e3e3e3
        color: #666
        line-height 80rpx
        position absolute
        left 0
        top calc(100% + 7px)
        &-item
          padding 0 20rpx
          &:active
            color: #fff
            background-color #2585cf
      &-passwd-eye
        width 100%
        display flex
        align-items: center
      &-label
        position relative
        flex: 1
        // ss-display-flex(row nowrap, flex-start, center)
      &-input
        font-size 28rpx
        height 51rpx
      &-title
        width 160rpx
        line-height 53rpx
        font-size 28rpx
        color: #666
      &-required
        font-size 30rpx
      &-desc
        flex 1
        font-size 20rpx
        // position absolute
        // top: calc(100%)
        // right: 0
        // z-index 2
      &-error
        font-size 22rpx
        color red
        margin-top 20rpx
        // position absolute
        // top: calc(100%)
        // left: 0
        // z-index 2
      &-rc-group
        display flex
        .input-item
          &-rc
            font-size 28rpx
            position relative
            margin-right 20rpx
            display flex
            text
              order: 2
            .input-item-checkbox-after, .input-item-radio-after
              order: 1
          &-checkbox
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity 0
            z-index 2
          &-checkbox-after
            margin-right 6rpx
            &:before
              content: '\e70b'
              color: #999
            &.checked
              &:before
                content: '\e70c'
                color: #2485cf
          &-radio
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity 0
            z-index 2
          &-radio-after
            margin-right 6rpx
            &:before
              content: '\e76a'
              color: #999
            &.checked
              &:before
                content: '\e76b'
                color: #2485cf
