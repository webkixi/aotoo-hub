.border-radius-p100
  border-radius: 100%

.border-default
  border: 1rpx solid $color-border
  &.active
    border-color: red

.border-primary
  border: 1rpx solid $color-border-2


.bt-default
  border-top: 1rpx solid $color-border
.bb-default
  border-bottom: 1rpx solid $color-border
.bl-default
  border-left: 1rpx solid $color-border

.bb-e3e3e3-hkv
  .hkv
    border-bottom: 1rpx solid $color-border

.bb-e3e3e3-item
  &:last-child
    .item-line
      border-bottom: none
  >ui-item
    >.item-line
      border-bottom: 1rpx solid $color-border



.br-e3e3e3-li
  >ui-item
    >.item-line
      border-left: 1rpx solid $color-border
    &:first-child
      >.item-line
        border-left: none

.bb-e3e3e3-list-hbody
  >view
    &:last-child
      .hbody
        border-bottom: none
  .hbody
    border-bottom: 1px solid $color-border


.box-shadow
  box-shadow: $box-shadow
  position: relative
.box-shadow-top
  box-shadow: $box-shadow-top
  position: relative
.box-shadow-bottom
  box-shadow: $box-shadow-bottom
  position: relative

.bs-e3e3e3
  @extends .box-shadow
  &:last-child
    box-shadow: inherit

.bs-e3e3e3-list
  >ui-item
    >.item-li
      box-shadow: 0 10rpx 11rpx rgba(21,61,106,0.03)
    &:last-child
      >.item-li
        box-shadow: inherit

.bb-e3e3e3-list-hkv
  >view
    &:last-child
      .hkv
        border-bottom: none
  .hkv
    border-bottom: 1rpx solid $color-border

.bb-e3e3e3-item-line
  &:last-child
    >ui-item
      >.item-line
        border-bottom: none
  >ui-item
    >.item-line
      border-bottom: 1rpx solid $color-border


.br-10-r
  border-radius: 10rpx
.brtr-10-r
  border-radius: 10rpx 10rpx 0 0
.brbl-10-r
  border-radius: 0 0 10rpx 10rpx
.brtl-10-r
  border-radius: 10rpx 0 0 10rpx
.brrb-10-r
  border-radius: 0 10rpx 10rpx 0