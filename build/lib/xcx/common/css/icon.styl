icon 
  display: block
//小圆点
.icon-dot
  background: red
  background:#f00;
  color:#fff;
  display: block;
  font-size: 10px;
  width 20rpx
  height @width
  border-radius @width
  ss-display-flex(row nowrap, center, center, center)

.icon-dot-small
  @extends .icon-dot
  width 16rpx
  height @width
  border-radius @width

.icon-dot-more
  @extends .icon-dot
  border-radius: 20rpx
  padding: 0 4px;


