
.fs-normal
  font-style: normal
.fw-normal
  font-weight: normal
.fw-bold
  font-weight: bold

.textellipsis-1
  ss-textellipsis(1)

.textellipsis-2
  ss-textellipsis(2)

.textellipsis-3
  ss-textellipsis(3)

//文章
.article-title-b
  color: $color-active
  display: block
  font-size: 18px
  @extends .fw-bold

.article-title
  color: $color-active
  display: block
  font-size: $title-size

.article-content
  line-height: 20px
  image 
    margin: 0 auto
    width: auto
    max-width: 100%


//列表
.list-title
  color: $color-active
  display: block
  font-size: $title-size
  font-weight: $title-fw
  @extends .textellipsis-2

.list-title-1
  @extends .list-title
  -webkit-line-clamp: 1

.list-title-minor
  color: $color-active
  display: block
  font-size: $title-size-minor
  font-weight: $title-fw-minor
  @extends .textellipsis-2


// .list-img 请查看img.styl
.list-desc
  color: $color-grey  //这个待定 可以考虑再加个desc的配置参数
  font-size: $size-primary
  @extends .textellipsis-2
.list-desc-1
  @extends .list-desc
  -webkit-line-clamp: 1

