*/
view 
  font-size: $size-normal

.ss-focus
  &:focus, &:active
    background: #FAFAFA

/*
  next-p100 主要是生成结构时，会产出ui-item 或ui-list等标签去包住具体的结构
    但是不是所有的都需要去添加 -。-！！！
*/
.next-p100  
  >ui-item     //list/normal 暂定
    height: 100%
.next-wid-p100
  >ui-item     //list/normal 暂定
    width: 100%
.next-flex-1
  >ui-item     //list/normal 暂定
    flex: 1
.next-p100-first 
  >ui-item
    &:first-child
      height: 100%
.next-flex1-first
  >ui-item
    &:first-child
      flex: 1

.flex-1
  flex: 1

.oh
  overflow hidden

.ss-center
  text-align: center
.ss-left
  text-align: left

.ss-sizing-border
  box-sizing: border-box

.pages-wrap-default
  height: 100vh
  padding: $padding-default

.pages-wrap-default-x
  height: 100%
  padding: $padding-default

.none
  display none
.disN
  display none!important
.ss-block
  display block

.scroll-wrap-nav
  height: calc(100%)
  // height: calc(100% - 88rpx)

.demowrap-x
  padding: 24rpx
  width: calc(100% - 48rpx)   //48= 24*2

//标题
.title-sm-grey
  color: $color-grey
  font-size: 24rpx

.title-primary-grey
  color: $color-grey
  font-size: $size-primary

.title-lg-active
  color: $color-active
  font-size: $size-lg

.bg-title
  border-bottom: 2rpx solid $color-border
  background: $color-bg-2
  color: $color-grey
  line-height: $line-height-title
  padding: $plr-default

.bg-display
  border-radius: $br-sm
  box-sizing: border-box;
  padding: $padding-default
  height: 160rpx



//带背景色标题
.bg-title-f3f3f3
  >.htitles
    height: 100%
  background: #f3f3f3
  height: 70rpx
  padding: 0 20rpx
  >.htitles
    ss-display-flex(row nowrap, space-between, center, center)

.bg-title-body-f3f3f3
  ss-display-flex(row nowrap, space-between, center, center)
  background: #f3f3f3
  height: 70rpx
  padding: 0 20rpx
  .htitles
    ss-display-flex(row nowrap, flex-start, center)
.item-titlex
  color: #333333
  font-size: 16px
.item-descx
  color: #999
  font-size: 14px

.item-circle
  border: 3rpx solid #C8C8C8
  border-radius: 100%
  width: 60rpx
  height: @width
  ss-display-flex(row, center, center, center)

.item-circle-solid
  border-radius: 100%
  background: $color-bg
  color: #fff
  font-size: 44rpx
  width: 100rpx
  height: @width
  ss-display-flex(row, center, center, center)



